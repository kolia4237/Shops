@using Shop.Domain.Entity
@using Shop.Domain.Extensions
@model Cloth
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div style="padding: 10px;"></div>
<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            @if (Model.Avatar != null)
            {
                <img class="img img-fluid" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Avatar))" />
            }
        </div>
        <div class="col-md-4">
            <div class="card-body">
                <h5 class="card-title text-center">@Model?.Name</h5>
                <p class="card-text"><b>Описание: </b>@Model?.Description</p>
                <p class="card-text"><b>Стоимость: </b>@Model?.Price ₽</p>
            </div>
        </div>
    </div>
</div>

<div style="padding: 30px;"></div>
<div class="card text-center">
    <div class="card-header">
        <ul class="nav nav-pills card-header-pills">
            <li class="nav-item">
                <a class="nav-link active" asp-controller="Home" asp-action="Index">Главная</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Cloth" asp-action="List" asp-route-parameter="1">Мужские вещи</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Cloth" asp-action="List" asp-route-parameter="2">Женские вещи</a>
            </li>
        </ul>
    </div>
</div>