@model Shop.Domain.ViewModels.Account.PasswordViewModel
@{
    ViewBag.Title = "Смена пароля";
    Layout = "_Layout";
}

<div style="padding: 40px;"></div>
<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <span class="anchor"></span>
                    <div class="card card-outline-secondary border border-white">
                        <div class="card-header">
                            <h3 class="mb-0 text-center ParagraphHome">Смена пароля</h3>
                        </div>
                        <div class="card-body">
                            <form autocomplete="on" method="post" asp-controller="Account" asp-action="ChangePassword">
                                <p class="text-center" style="color: red;">@ViewBag.Error</p>
                                <div asp-validation-summary="All" style="font-size:23px; font-family:Impact" class="text-danger text-center"></div>
                                <div class="form-group">
                                    <input autocomplete="new-password" asp-for="OldPassword" placeholder="Старый пароль" class="form-control textbox-dg font-weight-bold text-center" type="password">
                                </div>
                                <div class="form-group">
                                    <input autocomplete="new-password" asp-for="NewPassword" placeholder="Новый пароль" class="form-control textbox-dg font-weight-bold text-center" type="password">
                                </div>
                                <div class="mb-auto">
                                    <h2 class="ParagraphHome text-center"><a asp-controller="Account" asp-action="Register" style="color:deepskyblue;">Регистрация</a></h2>
                                </div>
                                <hr/>
                                <div class="mb-auto">
                                    <h2 class="ParagraphHome text-center"><a asp-controller="Account" asp-action="Login" style="color:deepskyblue;">Логин</a></h2>
                                </div>
                                <button class="btn btn-primary btn-lg float-right" type="submit">Отправить</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
