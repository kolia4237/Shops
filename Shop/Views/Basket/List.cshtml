@model List<Shop.Domain.Entity.Cloth>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div style="padding: 20px;"></div>
@if (Model == null || Model.Count == 0)
{
    <div class="card col-md-12">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="https://images.wallpaperscraft.ru/image/single/planeta_komety_kosmos_163352_3840x2160.jpg" 
                     class="img-fluid rounded-start rounded">
            </div>
            <div class="col-md-8">
                <div class="card-body text-center">
                    <h5 class="card-title">Корзина пуста :(</h5>
                </div>
            </div>
        </div>
    </div>
    <div style="padding: 10px;"></div>
    <div class="card text-center">
        <div class="card-header">
            <ul class="nav nav-pills card-header-pills">
                <li class="nav-item">
                    <a class="nav-link active" asp-controller="Home" asp-action="Index">Главная</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Cloth" asp-action="List" asp-route-parameter="1">Мужские вещи</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Cloth" asp-action="List" asp-route-parameter="2">Женские вещи</a>
                </li>
            </ul>
        </div>
    </div>
    <div style="padding: 10px;"></div>
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Juicy Couture</h5>
                    <p class="card-text">
                        Всемирно известный американский бренд Juicy Couture может похвастаться миллионами поклонниц и поклонников по всему миру, и не меньшим количеством
                        противников продукции бренда. Почему так получилось? Давайте разберемся. Основателями бренда Juicy Couture стали две подруги Памела Скэйст-Леви
                        и Гела Нэш-Тейлор, которые в 1997-м году в Лос-Анджелесе создали свою первую коллекцию спортивных костюмов.
                    </p>
                    <a asp-controller="Balance" asp-action="Get" class="btn btn-primary">К балансу</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Michael Kors</h5>
                    <p class="card-text">
                        Michael Kors – это истинный вольный и либеральный американский модный бренд, являющийся собственностью одноименного дизайнера Майкла Корса (Michael Kors).
                        Главный офис бренда находится в Нью-Йорке и он активно занимается производством одежды, аксессуаров и парфюмерии класса "люкс".
                    </p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Главная</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
 <div class="row">
     @for (int i = 0; i < Model.Count(); i++)
     {
         var cloth = Model[i];
         if (Model.Count() == 1)
         {
             <div class="col-sm-12">
                 <div class="card">
                     <div class="card-body">
                         <h5 class="card-title">@cloth?.Name</h5>
                         <p class="card-text">Описание: @cloth?.Description</p>
                         <p class="card-text">Цена: @cloth?.Price</p>
                         <a class="btn btn-danger" asp-controller="Basket" asp-action="Delete" asp-route-id="@cloth?.Id">Удалить</a>
                     </div>
                 </div>
             </div>
         }
         else
         {
             if (i % 2 == 0)
             {
                 <div class="col-sm-6">
                     <div class="card">
                         <div class="card-body">
                             <h5 class="card-title">@cloth?.Name</h5>
                              <p class="card-text">Описание: @cloth?.Description</p>
                              <p class="card-text">Цена: @cloth?.Price</p>
                              <a class="btn btn-danger" asp-controller="Basket" asp-action="Delete" asp-route-id="@cloth?.Id">Удалить</a>
                         </div>
                     </div>
                 </div>
             }
             else
             {
                 <div class="col-sm-6">
                     <div class="card">
                         <div class="card-body">
                             <h5 class="card-title">@cloth?.Name</h5>
                              <p class="card-text">Описание: @cloth?.Description</p>
                              <p class="card-text">Цена: @cloth?.Price</p>
                              <a class="btn btn-danger" asp-controller="Basket" asp-action="Delete" asp-route-id="@cloth?.Id">Удалить</a>
                         </div>
                     </div>
                 </div>
             }   
         }
     }
 </div>    
} 